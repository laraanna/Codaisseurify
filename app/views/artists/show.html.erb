<div class= "container">

  <div class="page-header">
    <h1> <%= @artist.name %> <small> <%=  @artist.genre%> </small> </h1>
    <h5> <%= @artist.bio %> </h5>
    <button type="button" class="btn btn-default btn-xs">
      <%= link_to 'Discard', artist_path(@artist.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </button>

  </div>
  <div class="wrapper">

  <div class="panel panel-default">
    <div class="panel-heading">All Songs</div>
  </div>

  <table class="table table-striped" id="songList">
    <%= render @songs %>
  </table>

  <div>
    <a href="#" id="delete_all">Delete Songs</a>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Add Song</div>
      <ul class="list-group">
        <li class="list-group-item ">
          <%= render 'songs/new_song_form', song: @song, artist: @artist %>
        </li>
      </ul>
  </div>

  <div class="row">
    <div class="thumbnail artist" >
      <%= image_tag @artist.remote_image_url%>
    </div>
  </div>
</div>
</div>
